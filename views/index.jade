extends layout

block content
	div#welcome-screen
		h1 welcome to twaddlr!

		form(method='post', id='signin_form', class='fancy')

			p.row
				label Login
				input(type='text', name='login')
			p.row
				label Password
				input(type='password', name='password')
			p.row.buttons
				button(type='submit') Login

		p
			| No account yet?
			a(href='/register') Sign up now!
